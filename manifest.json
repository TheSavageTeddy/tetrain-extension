{
    "name": "t3tris",
    "version": "0.01",
    "description": "A t3tris chrome extension game",
    "author": "Roxiun & TheSavageTeddy",
    "permissions": [
        "activeTab", 
        "declarativeContent", 
        "storage"
    ],
    "browser_action":{
        "default_icon": "t3trisicon.png",
        "default_popup": "popup.html",
        "default_title": "tesst"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_page": "options.html",
    "offline_enabled":true,
    "manifest_version": 2
}