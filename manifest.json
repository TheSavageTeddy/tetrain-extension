{
    "name": "t3tris",
    "version": "1.01",
    "description": "T3tris game - opens in a popup window",
    "author": "Roxiun & TheSavageTeddy",
    "permissions": [
        "activeTab", 
        "declarativeContent", 
        "storage"
    ],
    "browser_action":{
        "default_icon": "app/img/t3tris_128x.png",
        "default_popup": "popup.html",
        "default_title": "t3tris"
    },

    "offline_enabled":true,
    "manifest_version": 2
}
